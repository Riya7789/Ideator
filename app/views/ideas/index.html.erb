<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Add Idea
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Idea</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= simple_form_for Idea.new do |f| %>
      <div class="modal-body">
          <%= f.input :description %>
          <%= f.input :author %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
      <%end%>
    </div>
  </div>
</div>

<% @ideas.each do |idea| %>
  <div class="card">
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= idea.description %></p>
        <footer class="blockquote-footer">by <%= idea.author %></footer>
      </blockquote>
      <br>
      <%= link_to 'Delete', idea_path(idea), class: 'btn btn-sm btn-danger', data: {"turbo-confirm": "Are you sure?","turbo-method": :delete} %>
      <%= link_to 'Revise', edit_idea_path(idea), class: 'btn btn-sm btn-success' %>
    </div>
  </div>
<% end %>